// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/dotnet
{
    "name": "build",

    "dockerComposeFile": "container-compose.yaml",
    "service": "build-dev",
    "workspaceFolder": "/src",
    "initializeCommand": "(mkdir .devcontainer 2>/dev/null; touch .devcontainer/.env 2>/dev/null) || (mkdir .devcontainer 2> nul & type nul >> .devcontainer/.env 2> nul)",

    // Features to add to the dev container. More info: https://containers.dev/features.
    // "features": {},

    "customizations": {
        "vscode": {
            "extensions": [
                "anthropic.claude-code",
                "bierner.github-markdown-preview",
                "davidanson.vscode-markdownlint",
                "editorconfig.editorconfig",
                "github.copilot",
                "github.copilot-chat",
                "github.vscode-pull-request-github",
                "google.geminicodeassist",
                "humao.rest-client",
                "jeppeandersen.vscode-kafka",
                "mhutchie.git-graph",
                "ms-azuretools.vscode-containers",
                "ms-dotnettools.csdevkit",
                "openai.chatgpt",
                "ryanluker.vscode-coverage-gutters",
                "streetsidesoftware.code-spell-checker",
                "yzhang.markdown-all-in-one"
            ]
        }
    }
}
